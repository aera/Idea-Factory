<%= @idea.errors.full_messages.join(', ') %>

<%= form_for @idea do |f| %>
<div class="form-modal">
	<div class="form-group">
	  <%= f.label :title %>
	  <%= f.text_field :title, class: 'form-control' %>
	</div>
	<div class="form-group">
	  <%= f.label :description %>
	  <%= f.text_field :description, class: 'form-control' %>
	</div>
	<div>
	  <%= f.submit class: 'btn btn-primary' %>
	</div>
<% end %>
</div>
