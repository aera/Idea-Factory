<!DOCTYPE html>
<html>
  <head>
    <title>IdeaFactory</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <!-- <%= javascript_include_tag 'application' %> -->
  </head>

  <body>
		<nav class="navbar navbar-fixed-top navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <%= image_tag 'factory-2-256.jpg', style: 'width: 20px, height: 20px' %>
      <p style="font-size: 8px !important">Idea Factory</p>
    </div>
    <div class="collapse navbar-collapse" id="navbar-collapsable">
      <ul class="nav navbar-nav foo" id="menu">
        <li ><a href="/">Home</a></li>

      </ul>
      <ul class="nav navbar-nav navbar-right" align="right">

			<% if user_signed_in? %>
        <li class="nav-item notice"> <%= link_to "Hello #{current_user.first_name}", home_path %> </li>
				<li class="nav-item"> <%= link_to 'Sign Out', sessions_path, method: :delete %> </li>
		  <% else %>
		    <li class="nav-item"> <%= link_to 'Sign Up', new_user_path %> </li>

				<li class="nav-item"> <%= link_to 'Sign In', new_session_path %> </li>
		  <% end %>

      </ul>
    </div>
  </div>
</nav>








	<% if flash[:notice] %>
	  <div class= "alert alert-success">
		<%= flash[:notice] %>
	  </div>
	<% elsif flash[:alert] %>
	  <div class= "alert alert-danger">
		<%= flash[:alert] %>
	  </div>
	<% end %>


    <%= yield %>
    <%= javascript_include_tag 'application' %>
  </body>
</html>
